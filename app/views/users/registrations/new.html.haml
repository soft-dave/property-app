= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .container
    .row
      .col-md-10.col-md-offset-1
        .mainBox
          .row
            .col-md-12.col-md-offset-4
              .pageTitle
                %h2 SignUp
          .form-group
            .row
              .col-md-5.col-md-offset-4
                .pageTitle
                  = f.label :email
                  %br
                  = f.email_field :email, autofocus: true , :class => "form-control", :placeholder => "Email", :type => "text"
            .row
              .col-md-5.col-md-offset-4
                .pageTitle
                  = f.label :password
                  - if @validatable
                    %em
                      (#{@minimum_password_length} characters minimum)
                    %br
                      = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password", :type => "password"
            .row
              .col-md-5.col-md-offset-4
                .pageTitle
                  = f.label :confirm_password
                  %br
                  = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirmed Password", :type => "password"
            .row
              .col-md-5.col-md-offset-4
                .pageTitle
                  = f.submit "Sign Up", :class => 'btn btn-info'
                  %br
                  = render "users/shared/links"  
            .row
              .col-md-12